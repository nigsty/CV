        <ul class="language">
          <li><a href="/english"  id="english" class="text-grey-nav active">EN</a></li>
          <li><a href="/deutsch" id="deutsch" class="text-grey-nav">DE</a></li>
        </ul>

        <%- include(`../pages/${template}`) %>
      </div>
    </div>
    <footer class="container choco center margin-top">
      <p id="ignorePDF">Made with Node Js and EJS templating engine <i class="fa fa-heart"></i></p>
    </footer>
  </body>
    <script src="js/script.js"></script>
    
  </body>
</html>
